<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="name.marmac.tutorials.android.contentproviders.bankanalysis"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk 
		android:minSdkVersion="14" 
		android:targetSdkVersion="21" />

    <!-- Define the permission to use the ContentProvider in Read or Write -->
    <permission
        android:name="name.marmac.tutorials.android.contentproviders.bankanalysisContentProvider.READ"
        android:description="@string/descr_permission_provider_READ"
        android:label="@string/label_permission_provider_READ"
        android:protectionLevel="normal" />

    <permission
        android:name="name.marmac.tutorials.android.contentproviders.bankanalysisContentProvider.WRITE"
        android:description="@string/descr_permission_provider_WRITE"
        android:label="@string/label_permission_provider_WRITE"
        android:protectionLevel="normal" />
    
    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        
        <activity
            android:name="name.marmac.tutorials.android.contentproviders.bankanalysis.activities.BankManagerMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Define the ContentProvider by:
        	- its name pointing to the class that extends ContentProvider
        	- the authority that respond to the 
        	- the enforcement of the permission declared in the permission section.
         -->
        <provider
            android:name			="name.marmac.tutorials.android.contentproviders.bankanalysis.providers.BankAnalysisContentProvider"
            android:authorities		="name.marmac.tutorials.android.contentproviders.bankanalysis.provider"
            android:exported		="true"
            android:grantUriPermissions	="true"
            android:label			="BankAnalysisItemsProvider"
            android:readPermission	="name.marmac.tutorials.android.contentproviders.bankanalysisContentProvider.READ"
            android:writePermission	="name.marmac.tutorials.android.contentproviders.bankanalysisContentProvider.WRITE" >
        </provider>
        
    </application>

</manifest>
