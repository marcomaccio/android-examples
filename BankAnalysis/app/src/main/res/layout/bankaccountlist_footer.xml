<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bankAccountListFooter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:orientation="vertical">
    
    <TextView 
	    android:id="@+id/addBankAccount"
	    android:layout_width="100dp"
	    android:layout_height="50dp"
	    android:gravity="start"
	    android:text="@string/add_new_bankaccount"
	    android:textSize="16sp" />
    
    <TextView
        android:id="@+id/listBanks"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addBankAccount"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/addBankAccount"
        android:layout_toRightOf="@+id/addBankAccount"
        android:gravity="end"
        android:text="@string/list_banks"
        android:textSize="16sp" />

</RelativeLayout>
